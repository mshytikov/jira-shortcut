{
  "name": "JIRA ShortCut",
  "version": "7.0.0",
  "manifest_version": 3,
  "description": "Copy to clip board jira issue as 'CMD-999: Description'",
  "background": {
    "service_worker": "js/service_worker.js"
  },
  "permissions" : [
    "tabs",
    "clipboardWrite",
    "storage"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_title": "Copy",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+J"
      }
    }
  },
  "options_page" : "options.html"
}
